<br>
Hello from the section file
<br>

<h2>{{product.title}}</h2>
<img src="{{product.featured_image | img_url:'300x'}}" alt="product image">

{%for block in section.blocks%}
    {%if block.type == 'tax_notice_block'%}
        <h4>{{block.settings.tax_notice_text}}</h4>
    {%elsif block.type == 'shipping_notice_block'%}
        <h4>{{block.settings.shipping_notice_text}}</h4>
    {%elsif block.type == 'product_price_block'%}
        <h4>{{product.price  | money_with_currency}}</h4>
    {%endif%}
{%endfor%}

{%unless section.settings.show_reviews == false%}
<h4>⭐⭐⭐⭐⭐</h4>
{%endunless%}

{% schema %}
    {
        "name": "product page content",
        "settings": [
            {
                "id": "show_reviews",
                "label": "show reviews?",
                "type": "checkbox"
            }
        ],
        "blocks": [
            {
                "type": "tax_notice_block",
                "name": "Tax Notice",
                "limit": 1,
                "settings":[
                    {
                        "id": "tax_notice_text",
                        "label":"enter tax notice",
                        "type": "text"
                    }
                ]
            },
            {
                "type": "shipping_notice_block",
                "name": "Shipping Notice",
                "limit": 1,
                "settings":[
                    {
                        "id": "shipping_notice_text",
                        "label": "enter shipping notice",
                        "type": "text"
                    }
                ]
            },
            {
                "type": "product_price_block",
                "name": "Product Price",
                "limit": 1,
                "settings":[]
            }
        ]
    }
{% endschema %}